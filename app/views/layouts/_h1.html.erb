<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark"><%=@page_title%>
            <%unless @add_follow.blank? %>
              <a href="/follow?topic=<%=@filter%>" class="btn btn-sm btn-default">follow "<%=@filter%>"</a>
            <%end %>
          </h1>

        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active"><%=@nav.capitalize!%></li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <%unless @debug.blank? %>
  <div class="alert alert-success">
    <h3>Debug</h3>
    <%=debug @debug%>
  </div>
  <%end%>
