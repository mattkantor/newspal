<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-light-primary elevation-4">
  <!-- Brand Logo -->
  <a href="index3.html" class="brand-link">
    <img src="dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
         style="opacity: .8">
    <span class="brand-text font-weight-light">Scoopy (alpha)</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->


    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <!-- Add icons to the links using the .nav-icon class
             with font-awesome or any other icon font library -->

        <%=nav_item("News","/","newspaper-o", @nav=="news")%>
        <%=nav_item("Topics","/topics","address-card-o", @nav=="topics")%>

        <%=nav_item("Sources","/sources","folder", @nav=="sources")%>
        <%if @following.count > 0 %>
        <li class="nav-header">Following </li>
          <% @following.each do |e| %>
            <li class="nav-item">
                <p class="nav-link">
                        <a href="/?filter=<%=e %>" >
                        <i class="nav-icon fa fa-smile-o"></i>  <%= e %></a>
                        <a href="/unfollow?topic=<%=e%>"
                        <i  class="nav-icon fa fa-close pull-right"></i></a>
                </p>
            </li>
          <%end%>
        <%end%>

        <li class="nav-header">Trending </li>

            <% @top_ents.each do |e| %>
            <li class="nav-item">
              <p class="nav-link">
                <a href="/?filter=<%=e %>" >
                  <i class="nav-icon fa fa-circle-o"></i>
                  <%= e %>
                </a>
                <a href="/follow?topic=<%=e%>" title="follow <%=e%>">
                <i  class="nav-icon fa fa-smile-o pull-right"></i></a>
              </p>
            </li>
            <%end%>



      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
